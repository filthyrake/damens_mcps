# iDRAC Connection Settings
IDRAC_HOST=192.168.1.100
IDRAC_PORT=443
IDRAC_PROTOCOL=https
IDRAC_USERNAME=root
IDRAC_PASSWORD=your-password

# SSL Settings
# IMPORTANT: Always use true in production to prevent MITM attacks!
# Only set to false for development/testing with self-signed certificates
# See SECURITY.md for proper certificate setup
IDRAC_SSL_VERIFY=true
IDRAC_SSL_CERT_PATH=

# MCP Server Settings
SERVER_PORT=8000
SECRET_KEY=your-generated-secret-key-here
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# MCP Authentication
MCP_USERNAME=admin
MCP_PASSWORD=admin
ADMIN_TOKEN=admin-token-change-this

# Optional: Docker settings
DOCKER_ENABLED=false
