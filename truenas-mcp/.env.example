# TrueNAS Scale Configuration
# Copy this file to .env and fill in your TrueNAS details

# TrueNAS Scale hostname or IP address
TRUENAS_HOST=your-truenas-host.local

# TrueNAS Scale API key (generate from System -> API Keys)
TRUENAS_API_KEY=your-api-key-here

# TrueNAS Scale HTTPS port (default: 443)
TRUENAS_PORT=443

# Use SSL/TLS for connection (default: true)
TRUENAS_USE_SSL=true

# Verify SSL certificates (default: true, set to false for self-signed certs)
TRUENAS_VERIFY_SSL=true

# Connection timeout in seconds (default: 30)
TRUENAS_TIMEOUT=30