# Warewulf Connection Settings
WAREWULF_HOST=localhost
WAREWULF_PORT=9873
WAREWULF_PROTOCOL=http

# Authentication (choose one method)
# Option 1: Username/Password
WAREWULF_USERNAME=admin
WAREWULF_PASSWORD=your-password

# Option 2: API Token (if supported)
# WAREWULF_API_TOKEN=your-api-token

# SSL Settings
WAREWULF_SSL_VERIFY=false
WAREWULF_SSL_CERT_PATH=

# Connection Settings
WAREWULF_TIMEOUT=30
WAREWULF_MAX_RETRIES=3

# MCP Server Settings
SERVER_PORT=8000
SECRET_KEY=your-generated-secret-key-here
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: Docker settings
DOCKER_ENABLED=false
