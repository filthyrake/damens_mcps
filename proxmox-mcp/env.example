# Proxmox Connection Settings
PROXMOX_HOST=your-proxmox-host.example.com
PROXMOX_PORT=8006
PROXMOX_PROTOCOL=https

# Authentication (choose one method)
# Option 1: Username/Password
PROXMOX_USERNAME=your-username
PROXMOX_PASSWORD=your-password
PROXMOX_REALM=pve

# Option 2: API Token (recommended for production)
# PROXMOX_API_TOKEN=your-api-token

# SSL Settings
PROXMOX_SSL_VERIFY=true
PROXMOX_SSL_CERT_PATH=

# MCP Server Settings
SERVER_PORT=8000
SECRET_KEY=your-generated-secret-key-here
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: Docker settings
DOCKER_ENABLED=false
